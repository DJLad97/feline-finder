{
	"compilerOptions": {
	  "strict": true,
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "isolatedModules": true,
	  "jsx": "react-native",
	  "lib": [
		  "es2017"
	  ],
	  "moduleResolution": "node",
	  "noEmit": true,
	  "target": "esnext",
	  "baseUrl": ".",
	  "paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			],
			"$src/*": [
				"./src/*"
			],
			"$atoms/*": [
				"./src/components/atoms/*"
			],
			"$molecules/*": [
				"./src/components/molecules/*"
			],
			"$organisms/*": [
				"./src/components/organisms/*"
			],
			"$screens/*": [
				"./src/screens/*"
			]
		}
	},
	"exclude": [
	  "node_modules",
	  "babel.config.js",
	  "metro.config.js",
	  "jest.config.js"
	],
	"extends": "expo/tsconfig.base",
  }

